version: '3'
services:

    front.admin:
        build: ./front/admin
        volumes:
            - ./front/admin:/usr/src/app
        command: sh -c " npm install && npm start "
        networks:
            - diplom
        environment:
            - NAME=front.admin

    db.mysql.main:
        build: ./test/mysql
        volumes:
            - './volumes/db/mysql/main:/var/lib/mysql'
        networks:
            - diplom

    storage.minio:
        build: ./storages/minio
        ports:
            - "9000:9000"
            - "9009:9009"
        volumes:
            - ./volumes/storages/minio:/data        
        networks:
            - diplom

    laravel.jobs:
        build:
            context: ./back/laravel
            dockerfile: Dockerfile
        volumes:
            - './back/laravel:/var/www/html'
        command: sh -c "/var/www/html/artisan queue:work"
        networks:
            - diplom
        environment:
            - NAME=jobs.laravel
        depends_on:
            - laravel.api

    front.docs:
        build: ./test/swag
        volumes:
            - ./docs:/usr/share/nginx/html/docs
        ports:
            - "8080:8080"
        networks:
            - diplom
        env_file:
            -   ./docs/doc.env

    redis.socket:
        build: ./test/red_soc
        volumes:
            - './volumes/db/redis/sockets:/data'
        networks:
            - diplom 

    socket.jonny:
        build: ./socket/socket_instance
        volumes:
            - ./socket/socket_instance:/usr/src/app
        command: sh -c " npm install && npm start "
        networks:
            - diplom
        depends_on:
            - redis.socket
        environment:
            - SERVER_NAME=socket.jonny

    front.public:
        build: ./front/public
        volumes:
            - ./front/public:/usr/src/app
        command: sh -c " npm install && npm start "
        networks:
            - diplom
        environment:
            - NAME=front.public

    laravel.api:
        build:
            context: ./back/laravel
            dockerfile: la.Dockerfile
        volumes:
            - './back/laravel:/var/www/html'
        command: sh -c "composer install && /var/www/html/artisan serve --host=0.0.0.0"
        networks:
            - diplom
        environment:
            - NAME=laravel.api       

    nginx:
        build: ./test/nginx
        image: prostaff.azurecr.io/nginx:latest
        volumes:
            - ./nginx.conf:/etc/nginx/nginx.conf:ro
        networks:
            - diplom
        ports:
            - "80:80"     

    redis.laravel:
        build: ./test/red_lar
        volumes:
            - './volumes/db/redis/laravel:/data'
        ports:
            - "6379:6379"
        networks:
            - diplom   
                   
networks:
    diplom:
        driver: bridge 
